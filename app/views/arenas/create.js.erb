<% if @arena.result_id == 1 %>
  var html = '<tr class=<%=@arena.id%> ><td><%= image_tag("Icons/Classes/#{get_name(@arena, "Oppclass")}_Icon.gif", height: "24", width: "24")%>   <%=get_name(@arena, "Oppclass")%></td><td><span class="Victory">Win</span></td><td><%= link_to "Delete", @arena, method: :delete , remote: true %></td></tr>'
