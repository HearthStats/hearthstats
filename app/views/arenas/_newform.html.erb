<%= form_for(@arena) do |f| %>
  <% if @arena.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@arena.errors.count, "error") %> prohibited this arena from being saved:</h2>

      <ul>
      <% @arena.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div> -->
  <div class="gofirstfield">
    <div class="pure-button pure-button-success gofirst"> First Turn</div><br />
    <%= f.check_box :gofirst , :checked => true, class: "firstcheckbox hidden" %>
  </div>

  <div class="yourfield">
    <%= f.label "Your Class" %><br />
    <% if @lastentry.nil? %>
      <%= f.select :userclass, options_for_select(%w[Druid Hunter Mage Paladin Priest Rogue Shaman Warlock Warrior]) %>
    <% else %>
      <%= f.select :userclass, options_for_select(%w[Druid Hunter Mage Paladin Priest Rogue Shaman Warlock Warrior], @lastentry.userclass) %>
    <% end %>  
  </div>
  <div class="oppfield">
    <%= f.label "Opponent's Class" %><br />
    <%= f.select :oppclass, options_for_select(%w[Druid Hunter Mage Paladin Priest Rogue Shaman Warlock Warrior]) %>
  </div>
  <div class="cf"></div>
  <div class="winfield">
    <div class="pure-button pure-button-success winbutton"> Victory </div><br />
    <%= f.check_box :win , :checked => true, class: "wincheckbox hidden" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Entry", class: "pure-button pure-button-primary" %>
  </div>
<% end %>