<script>
	<% if params[:controller] == "additional" && params[:action] == "help"%>
		$("#help").addClass('active');
	<% else %>
		$(".<%= params[:controller] %>").addClass('active');
		$(".<%= params[:controller] %>").find(".<%= params[:action] %>").addClass('active');
	<% end %>
</script>
