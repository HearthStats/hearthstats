<script type="text/javascript" src= <%= public_url("js/jquery.localscroll-1.2.7-min.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.mobilemenu.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.scrollTo.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.easing.1.3.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.flexslider.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/main.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/contact.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/carousel.js") %> ></script>
<script type='text/javascript' src= <%= public_url("js/jquery.placeholder.min.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.prettyphoto.js") %> ></script>

</body>
</html>
