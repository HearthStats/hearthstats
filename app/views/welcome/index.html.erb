<!DOCTYPE html>
<html lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:fb="http://ogp.me/ns/fb#">
<head>
  <meta charset="utf-8" />
  <meta content="Jeffrey Tong" name="author" />
  <%= csrf_meta_tags %>
  <title>HearthStats | Hearthstone Statistics and Tracking</title>
  <meta name="keywords" content="hearthstone, stats, hearthstats, statistics, tracking, win, loss, online, cloud, automatic">
  <meta name="description" content="HearthStats makes Hearthstone win/loss tracking simple. HearthStats will provide statistical feedback on your results to help you improve your game.">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <!-- OG Meta -->
  <meta property="og:image" content="http://www.hearthstats.net/assets/hearthstatslogo.png">
  <meta property="og:url" content="http://hearthstats.net/">
  <meta property="og:title" content="HearthStats | Hearthstone Statistics and Tracking">
  <meta property="og:description" content="HearthStats makes Hearthstone win/loss tracking simple. HearthStats will provide statistical feedback on your results to help you improve your game.">

  <!--[if lt IE 9]>
      <script src= "http://html5shiv.googlecode.com/svn/trunk/html5.js")></script>
  <![endif]-->
  <!-- CSS Files -->
  <link rel="stylesheet" type="text/css" href=<%= public_url("css/reset.css")%> data-turbolinks-track />
  <link rel="stylesheet" type="text/css" href=<%= public_url("foundation.css")%> data-turbolinks-track />
  <link rel="stylesheet" type="text/css" href=<%= public_url("css/style.css")%> data-turbolinks-track />
  <link rel="stylesheet" type="text/css" href=<%= public_url("css/footable.core.min.css")%> data-turbolinks-track />
  <link rel="stylesheet" type="text/css" href=<%= public_url("css/ico.css")%> data-turbolinks-track />

  <!-- FAVICON-->
  <%= favicon_link_tag 'favicon.ico' %>
  <%= favicon_link_tag '/hearthstatslogo.png', rel: 'apple-touch-icon', type: 'image/png' %>

  <!-- Google Webfont -->
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,800' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>

</head>
<body>
<!-- Header section -->
<header>
  <div class="top-bar">
    <div class="row">

      <!-- Social icons -->
      <div class="four columns">
        <ul class="top-social">
          <li class="top-tweet"><a href="https://twitter.com/HearthStats"><div class="icon-twitter"><div class="social-inner"><img src= <%= public_url("images/pat.png" ) %> alt=""></div></div></a></li>
          <li class="top-fb"><a href="https://www.facebook.com/HearthStats.net"><div class="icon-facebook"><div class="social-inner"><img src="images/pat.png" alt=""></div></div></a></li>
          <li class="top-gplus"><a href="https://plus.google.com/+HearthstatsNet/posts"><div class="icon-google-plus"><div class="social-inner"><img src="images/pat.png" alt=""></div></div></a></li>
        </ul>
      </div>

      <div class="eight columns">

        <!-- Login menu -->
        <div class="top-login">
        </div>
      </div>

    </div>
  </div>
  <div class="nav-bar">
    <div class="four columns">
      <%= image_tag 'logo_v2/orange_inline.png', class: 'header-logo' %>
    </div>
    <div class="eight columns">
      <ul class="top-nav">
        <li class="mobile-only"><%= link_to new_user_session_path do %>LOGIN<% end %></li>
        <li class="mobile-only"><%= link_to new_user_registration_path do %>REGISTER<% end %></li>
        <li><%= link_to root_path do %>HOME<% end %></li>
        <li><%= link_to public_decks_path do %>DECKS<% end %></li>
        <li><%= link_to streams_index_path do %>STREAMS<% end %></li>
        <li><%= link_to news_path do %>NEWS<% end %></li>
        <li><%= link_to '/june' do %>STAT REPORT<% end %></li>
        <li><%= link_to uploader_path do %>STAT TRACKER<% end %></li>
        <li><%= link_to contactus_path do %>CONTACT<% end %></li>
      </ul>
    </div>
  </div>
</header>

<!-- Global Stats section -->
<section id="global-stats">
  <div class="row">
    <div class="twelve columns wr-graph">
      <div class="content-head">
        <h2>Global Stats</h2>
        <div class="line"></div>
      <div>
      <div class="wr-graph-container">
        <div id="wr-graph" class="wr-graph-placeholder"></div>
      </div>
    </div>

    <div class="twelve columns">
      <div class="row">
        <div class="six columns top-wr">
          <h3>Arena Top 5 Classes</h3>
          <table class="wr">
            <thead>
            </thead>
            <tbody>
              <% @arena_top.each_with_index do |c,i| %>
                <tr>
                  <td class="wr-change"></td>
                  <td class="wr-rank"><%= i + 1 %>.</td>
                  <td class="wr-class"><%= c[0] %></td>
                  <td class="wr-wr"><%= c[1] %>%</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="six columns top-wr">
          <h3>Constructed Top 5 Classes</h3>
          <table class="wr">
            <thead>
            </thead>
            <tbody>
              <% @con_top.each_with_index do |c,i| %>
                <tr>
                  <td class="wr-change"></td>
                  <td class="wr-rank"><%= i + 1 %>.</td>
                  <td class="wr-class"><%= c[0] %></td>
                  <td class="wr-wr"><%= c[1] %>%</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Decklists section -->
<section id="decklists">
  <div class="row">

    <div class="content-head">
      <h2>Decklists</h2>
      <div class="line"></div>
    </div>
    
    <div class="twelve columns">
      <div id="tab-container" class="tab-container">
        <ul class="etabs">
          <li class="tab"><a href="#recent">Recent Decks</a></li>
          <li class="tab"><a href="#top">Top Decks</a></li>
        </ul>
        <div id="recent">
          <table id="decklist" class="footable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Class</th>
                <th data-hide="phone,tablet">Minions</th>
                <th data-hide="phone,tablet">Spells</th>
                <th data-hide="phone,tablet">Weapons</th>
                <th data-hide="phone">Matches</th>
                <th>Win Rate</th>
                <th data-hide="phone,tablet">Posted By</th>
                <th>View</th>
              </tr>
            </thead>
            <tbody>
              <% @recentdecks.each do |deck| %>
                <% unique_deck = deck.unique_deck %>
                <tr>
                  <td class="name"><%= deck.name %></td>
                  <td class="class"><%= deck.class_name %></td>
                  <td class="minions"><%= unique_deck.num_minions %></td>
                  <td class="spells"><%= unique_deck.num_spells %></td>
                  <td class="weapons"><%= unique_deck.num_weapons %></td>
                  <td class="matches"><%= unique_deck.num_matches %></td>
                  <td class="winrate"><%= number_to_percentage(unique_deck.winrate, precision: 1) %></td>
                  <% if (deck.user.profile.nil? || deck.user.profile.name.nil?) %>
                    <td class="author">[anonymous]</td>
                  <% else %>
                    <td class="author"><%= link_to(deck.user.profile.name, profile_path(deck.user_id))%></td>
                  <% end %>
                  <td class="show">
                    <%= link_to public_show_deck_path(deck) do %>
                      <div class="arrow">
                        <i class="icon-arrow-right arrow-icon"></i>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div id="top">
          <table id="decklist" class="footable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Class</th>
                <th data-hide="phone,tablet">Minions</th>
                <th data-hide="phone,tablet">Spells</th>
                <th data-hide="phone,tablet">Weapons</th>
                <th data-hide="phone">Matches</th>
                <th>Win Rate</th>
                <th data-hide="phone,tablet">Posted By</th>
                <th>View</th>
              </tr>
            </thead>
            <tbody>
              <% @topdecks.each do |deck| %>
                <% unique_deck = deck.unique_deck %>
                <tr>
                  <td class="name"><%= deck.name %></td>
                  <td class="class"><%= deck.class_name %></td>
                  <td class="minions"><%= unique_deck.num_minions %></td>
                  <td class="spells"><%= unique_deck.num_spells %></td>
                  <td class="weapons"><%= unique_deck.num_weapons %></td>
                  <td class="matches"><%= unique_deck.num_matches %></td>
                  <td class="winrate"><%= number_to_percentage(unique_deck.winrate, precision: 1) %></td>
                  <% if (deck.user.profile.nil? || deck.user.profile.name.nil?) %>
                    <td class="author">[anonymous]</td>
                  <% else %>
                    <td class="author"><%= link_to(deck.user.profile.name, profile_path(deck.user_id))%></td>
                  <% end %>
                  <td class="show">
                    <%= link_to public_show_deck_path(deck) do %>
                      <div class="arrow">
                        <i class="fa icon-arrow-right arrow-icon"></i>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= link_to public_decks_path, class: 'all-decks' do %><span class="icon-arrow-right all-decks-arrow-icon"></span> All Decks<% end %>
    </div>
  </div>
</section>

<!-- Streams section -->
<section id="streams">
  <div class="row">
    <div class="content-head">
      <h2>Streams</h2>
      <div class="line"></div>
    </div>
</section>

<!-- Footer section -->
<footer>
  <div class="footer">
    <p class="copyright"> Copyright HearthStats &copy; 2014</p>
    <%= image_tag ('logo_v2/grey_transparent_inline.png'), class: "footer-logo" %>
  </div>
</footer>
<!-- Footer section -->

<!-- jQuery Files -->
<script type="text/javascript" src= <%= public_url("js/jquery.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.mobilemenu.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.flot.min.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.easing.1.3.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/main.js") %> ></script>
<script type="text/javascript" src= <%= public_url("js/jquery.footable.js") %> ></script>
<script type='text/javascript' src= <%= public_url("js/jquery.easytabs.min.js") %> ></script>

</body>
</html>
