            img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1"
          div.smile
            |:)
        div.col-md-6
          div.globe
            i.fa.fa-globe
          div.regcont
            a class="btn btn-success btn-lg regbutton " href="/users/sign_up" Register Now

javascript:
  $(document).ready(function() {
    var isShownArena = false;
    $('.showarena').click(function(){
      $('.arenamore').slideToggle();
      if (isShownArena == false){
        $('.showarena').text("Less");
        isShownArena = true;
      }else{
        $('.showarena').text("More");
        isShownArena = false;
      }
    });
    var isShownCon = false;
    $('.showcon').click(function(){
      $('.conmore').slideToggle();
      if (isShownCon == false){
        $('.showcon').text("Less");
        isShownCon = true;
      }else{
        $('.showcon').text("More");
        isShownCon = false;
      }
    });
  });